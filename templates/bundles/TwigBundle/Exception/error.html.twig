{% extends 'base.html.twig' %}

{% block title %}{{ status_code }} - {{ status_text }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8">
                <h1 class="display-4">{{ status_code }}</h1>
                <h2 class="h3 mb-3">{{ status_text }}</h2>
                <p class="lead">{{ exception.message }}</p>
                
                {% if app.debug %}
                    <hr>
                    <h3>Debug Information:</h3>
                    <p><strong>Exception:</strong> {{ exception.class }}</p>
                    <p><strong>File:</strong> {{ exception.file }} (line {{ exception.line }})</p>
                {% endif %}
                
                <a href="{{ path('home') }}" class="btn btn-primary">Retour Ã  l'accueil</a>
            </div>
        </div>
    </div>
{% endblock %}